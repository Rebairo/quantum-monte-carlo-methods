{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "dependsOn": [
        "build-build",
        "build-run"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-build",
      "type": "shell",
      "command": "g++ -g src/main.cpp src/lib/*.cpp -o main.exe"
    },
    {
      "label": "build-run",
      "type": "shell",
      "command": "./main.exe"
    },
    {
      "label": "test",
      "dependsOn": [
        "test-build",
        "test-run"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "test-build",
      "type": "shell",
      "command": "g++ -g test/test.cpp src/lib/*.cpp -o test.exe"
    },
    {
      "label": "test-run",
      "type": "shell",
      "command": "./test.exe"
    }
  ]
}