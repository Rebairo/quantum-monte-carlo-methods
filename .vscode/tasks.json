{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "src/main.cpp",
        "src/lib/*.cpp",
        "-o",
        "main.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "test/test.cpp",
        "src/lib/*.cpp",
        "-o",
        "test.exe"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}