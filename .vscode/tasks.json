{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "./main.exe",
      "dependsOn": [
        "build-build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-build",
      "type": "shell",
      "command": "g++ -std=c++14 -O0 src/main.cpp src/models/*.cpp src/algorithms/*.cpp -o main.exe",
      "dependsOn": [
        "build-clear"
      ]
    },
    {
      "label": "build-clear",
      "type": "shell",
      "command": "rm main.exe -force"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "./test.exe",
      "dependsOn": [
        "test-build"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "test-speed",
      "type": "shell",
      "command": "make",
      "dependsOn": [
        "test-clear"
      ]
    },
    {
      "label": "test-debug",
      "type": "shell",
      "command": "g++ -std=c++14 -g test/test.cpp src/models/*.cpp src/algorithms/*.cpp -o test.exe",
      "dependsOn": [
        "test-clear"
      ]
    },
    {
      "label": "test-build",
      "type": "shell",
      "command": "g++ -std=c++14 -O0 test/test.cpp src/models/*.cpp src/algorithms/*.cpp -o test.exe",
      "dependsOn": [
        "test-clear"
      ]
    },
    {
      "label": "test-clear",
      "type": "shell",
      "command": "rm test.exe -force"
    },
    {
      "label": "test-build-catch",
      "type": "shell",
      "command": "g++ -std=c++14 -O2 -c test/test.cpp -o testmain.o"
    },
    {
      "label": "test-build-nocatch",
      "type": "shell",
      "command": "g++ -std=c++14 -O0 src/models/*.cpp src/algorithms/*.cpp test/models/*.cpp test/algorithms/*.cpp test/lib/*.cpp testmain.o -o test.exe"
    }
  ]
}